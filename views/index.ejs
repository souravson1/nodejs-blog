<div class="author">
  <h1 class="author__heading">Hi, I am Sourav.</h1>
  <p class="author__body">Web Developer and content creator.</p>
</div>

<img src="/img/hero-img.jpg" alt="Hero Image" class="hero-image" width="981" />

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>
  <ul class="article-ul">
    <% posts.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>
  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
